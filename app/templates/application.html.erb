<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Mammoth</title>
    <link rel="stylesheet" href="/css/vendor/normalize.css" type="text/css" media="screen">
    <link rel="stylesheet" href="/css/app/main.css" type="text/css" media="screen">
</head>
<body>
    <header role="main">
        <h1><img src="/img/logo.png" alt="mammoth" /></h1>
        <nav>
            <ul>
                <li>
                    <a href="/manage">
                        <i class="fa fa-database <%= 'current' if controller == 'manage' %>"></i>
                    </a>
                </li>
                <li>
                    <a href="/analytics">
                        <i class="fa fa-bar-chart <%= 'current' if controller == 'analytics' %>"></i>
                    </a>
                </li>
                <li>
                    <a href="/query">
                        <i class="fa fa-terminal <%= 'current' if controller == 'query' %>"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </header>
    <%= yield %>
</body>
</html>
